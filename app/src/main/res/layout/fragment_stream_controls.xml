<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true" >

    <ImageButton
        android:id="@+id/hidePlayerImageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_selector"
        android:focusable="true"
        android:nextFocusLeft="@id/hidePlayerImageButton"
        android:nextFocusRight="@id/hidePlayerImageButton"
        android:nextFocusUp="@id/hidePlayerImageButton"
        android:nextFocusDown="@id/fullscreenImageButton"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/hide_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/myriad_pro"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/hidePlayerImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/hidePlayerImageButton"
        app:layout_constraintTop_toTopOf="@+id/hidePlayerImageButton" />

    <ImageButton
        android:id="@+id/fullscreenImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/back_selector"
        android:nextFocusLeft="@id/fullscreenImageButton"
        android:nextFocusRight="@id/fullscreenImageButton"
        android:nextFocusUp="@id/hidePlayerImageButton"
        android:nextFocusDown="@id/fullscreenImageButton"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/full_screen_icon"
        app:tint="#FFFFFF"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/myriad_pro"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/fullscreenImageButton"
        app:layout_constraintEnd_toStartOf="@id/fullscreenImageButton"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fullscreenImageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>