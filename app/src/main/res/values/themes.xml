<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FormatPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="rippleColor">@color/lightGreen</item>
    </style>

    <style name="Theme.FormatPlayer.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="backgroundTint">@color/outlined_button_selector</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="rippleColor">@color/lightGreen</item>
    </style>

    <style name="Theme.FormatPlayer.EditTextCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardBackgroundColor">@color/dark</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>

    <style name="Theme.FormatPlayer.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@drawable/outlined_edittext_focus</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="Theme.FormatPlayer.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/outlined_textbutton_selector</item>
        <item name="rippleColor">@color/lightGreen</item>
    </style>

    <style name="Theme.FormatPlayer.DialogFragment" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Theme.FormatPlayer.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:background">@color/playerNavBackground</item>
        <item name="itemRippleColor">@color/lightGreen</item>
        <item name="itemIconTint">@color/player_nav_item_selector</item>
        <item name="itemTextColor">@color/player_nav_text_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
</resources>