<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FormatPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="rippleColor">@color/lightGreen</item>
    </style>

    <style name="Theme.FormatPlayer.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="backgroundTint">@color/outlined_button_selector</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="rippleColor">@color/lightGreen</item>
    </style>

    <style name="Theme.FormatPlayer.EditTextCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardBackgroundColor">@color/dark</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>

    <style name="Theme.FormatPlayer.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@drawable/outlined_edittext_focus</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="Theme.FormatPlayer.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/outlined_textbutton_selector</item>
        <item name="rippleColor">@color/lightGreen</item>
    </style>

    <style name="Theme.FormatPlayer.DialogFragment" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Theme.FormatPlayer.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:background">@color/playerNavBackground</item>
        <item name="itemRippleColor">@color/lightGreen</item>
        <item name="itemIconTint">@color/player_nav_item_selector</item>
        <item name="itemTextColor">@color/player_nav_text_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Theme.FormatPlayer.PlayerNavCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/transparent</item>
    </style>

    <style name="Theme.FormatPlayer.PlayerNavLinearLayout">
        <item name="android:background">@drawable/player_nav_linear_layout_selector</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/lightGreen</item>
    </style>

    <style name="Theme.FormatPlayer.ClickableCardView">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/outlined_textbutton_selector</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Theme.FormatPlayer.ChannelsTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/transparent</item>
        <item name="tabTextColor">@color/subtext</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabMode">scrollable</item>
        <item name="tabRippleColor">@color/lightGreen</item>
        <item name="fontFamily">@font/inter</item>
        <item name="tabTextAppearance">@style/Theme.FormatPlayer.ChannelsTextAppearance</item>
    </style>

    <style name="Theme.FormatPlayer.ChannelsTextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Theme.FormatPlayer.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.FormatPlayer.BottomSheetStyle</item>
    </style>
    
    <style name="Theme.FormatPlayer.BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/Theme.FormatPlayer.BottomSheetShape</item>
    </style>

    <style name="Theme.FormatPlayer.BottomSheetShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>